{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "es5",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015",
            "es2017"
        ],
        "paths": {
            "shared/*": ["src/app/shared/*"]
        }
    },
    "exclude": [
        "node_modules",
        "src/assets",
        "build"
    ]
}
